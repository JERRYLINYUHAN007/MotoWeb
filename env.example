# 環境變數配置範例
# 複製此檔案為 .env 並修改相應的值

# 服務器設定
PORT=3002
NODE_ENV=production
HOST=0.0.0.0

# MongoDB 連接設定
# 本地 MongoDB
MONGODB_URI=mongodb://localhost:27017/motoweb

# MongoDB Atlas (雲端資料庫)
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/motoweb?retryWrites=true&w=majority

# 備用資料庫
MONGODB_URI_BACKUP=mongodb://localhost:27017/motoweb_backup

# JWT 安全金鑰
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# 檔案上傳設定
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# 管理員帳號
ADMIN_EMAIL=admin@motoweb.com
ADMIN_PASSWORD=admin123

# 其他設定
LOG_LEVEL=info
ENABLE_CORS=true

# 部署相關設定 (用於雲端部署)
# DATABASE_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/motoweb
# CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
# SESSION_SECRET=your_session_secret_here 